  <div class="content">

    <div class="container-fluid main">
      <div class="content">
        {{#if sortedProducts.[0]}}
        {{#each sortedProducts as |product|}}
        <div class="product-box">
          <div class="img-wrap">
            <img src={{product.thumbnailImage}}>
          </div>
          <div class="product-store">
            <em>{{store-name product}}</em>
          </div>
          <div class="product-name">
            {{product.name}}
          </div>
          <div class="product-sale-price">
            ${{product.salePrice}}
          </div>
          <div class="product-likes-and-comments">
              <div class="product-comments" id="shopping-cart-box">
                <i {{action "saveProduct" product}}class="fa fa-cart-plus" aria-hidden="true" style="font-size:24px;position:relative;top:-2px;"></i>
