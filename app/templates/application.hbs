<div class="container-fluid">
    <nav class="navbar navbar-default">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">{{#link-to 'index'}}Shopping{{/link-to}}</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          {{#if session.isAuthenticated}}
          <button
          class='btn btn-default navbar-btn'
          {{action 'signOut'}}
          >
          {{fa-icon 'sign-out'}} Sign Out
        </button>
        <li><div class="cart-wrap">{{#link-to 'cart'}}<i class="fa fa-shopping-cart"></i><span class="shopping-cart-length">{{shoppingCart.products.length}}</span>{{/link-to}}</div></li>
        {{else}}
        <li>{{#link-to 'sign-in'}}Sign-in{{/link-to}}</li>
        <li>{{#link-to 'sign-up' class=""}}Sign-up{{/link-to}}</li>
        {{/if}}
      </ul>

    </div><!-- /.navbar-collapse -->
  </nav>
  <div class="container-fluid main">
    <div class="sidebar-left">
      <div class="filter-widget">
        <div class="filter-widget-title">
          <p>Price</p>
        </div>
        <div class="price-filter-wrap">
          <input class="number-low" type="number" placeholder="Min"><span class="price-dash">-</span>
          <input class="number-high" type="number" placeholder="Max">
        </div>
        <button class="price-go-btn">Go</button>
      </div>

      <div class="filter-widget">
        <div class="filter-widget-title">
          <p>Search by category</p>
        </div>
        <form action="">
          <input type="radio" name="gender" value="male"><span class="radio-text"> Electronics</span><br>
          <input type="radio" name="gender" value="female"><span class="radio-text"> Furniture</span><br>
          <input type="radio" name="gender" value="other"><span class="radio-text"> Printers</span>
        </form>


      </div>
    </div>


    <div class="content">

      <div class="outlet">
      {{outlet}}
      </div>


      <div class="sidebar-right">
      </div>

    </div>
  </div>
</div>
